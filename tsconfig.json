{
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ESNext",
    "lib": ["es2020", "dom", "webworker"],
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*", "./src-node/**/*", "./*.d.ts"]
}
